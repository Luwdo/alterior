{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules"
        ],
        "types": [
            "node"
        ]
    },
    "include": [ "./src/**/*.ts" ],
    "typedocOptions": {
		"mode": "file",
		"out": "../../docs/common",
		"target": "ES5",
		"excludeExternals": true,
		"excludePrivate": true,
		"externalPattern": "**/node_modules/**",
		"exclude": "**/node_modules/**,**/dist*/**,**/example/**,**/*.test.ts",
		"categoryOrder": [
		  "Entrypoint",
		  "*"
		]
	}
}