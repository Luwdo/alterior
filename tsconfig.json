{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es2016",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"module": "commonjs",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}