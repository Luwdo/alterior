{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es5",
		"sourceMap": true,
		"outDir": "./dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules"
		],
		"types": [
			"reflect-metadata"
		],
		"lib": [
			"es2016",
			"dom"
		],
		"declaration": true,
		"emitDecoratorMetadata": true
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}