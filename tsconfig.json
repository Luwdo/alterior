{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es5",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [
			"es2016",
			"dom"
		],
		"declaration": true,
		"emitDecoratorMetadata": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}